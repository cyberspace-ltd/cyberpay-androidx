<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/horizontal_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="@dimen/horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/card_number"
            android:hint="@string/card_hint"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            style="@style/input"
            android:layout_marginBottom="0dp"/>

        <ImageView
            android:id="@+id/card_type"
            android:layout_marginBottom="@dimen/horizontal_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/card_icon"
            android:layout_width="18dp"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:layout_height="18dp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/expiry"
                android:hint="@string/expiry_hint"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                style="@style/input"
                android:layout_marginBottom="0dp"/>

            <ImageView
                android:layout_marginBottom="@dimen/horizontal_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/date_icon"
                android:layout_width="18dp"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginEnd="@dimen/horizontal_margin"
                android:layout_height="18dp"/>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/horizontal_margin"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/cvv"
                android:hint="@string/cvv_hint"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                style="@style/input"
                android:layout_marginBottom="0dp"/>

            <ImageView
                android:layout_marginBottom="@dimen/horizontal_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/cvv_icon"
                android:layout_width="18dp"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginEnd="@dimen/horizontal_margin"
                android:layout_height="18dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/line_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerInside"
            android:src="@drawable/visa_card"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>

        <ImageView
            android:scaleType="centerInside"
            android:src="@drawable/master_card"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>

        <ImageView
            android:scaleType="centerInside"
            android:src="@drawable/verve_card"
            android:layout_width="wrap_content"
            android:layout_height="19dp"/>


    </LinearLayout>

</LinearLayout>