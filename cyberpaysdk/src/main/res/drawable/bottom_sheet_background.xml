<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C3C7D0"/>
            <corners android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" android:right="1dp" android:left="1dp" android:bottom="2dp">
            <solid android:color="@color/white"/>
            <corners android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</layer-list>